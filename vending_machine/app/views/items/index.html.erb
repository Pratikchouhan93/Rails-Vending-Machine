<!-- index of items -->

<div>
  <table>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Status</th>
      <% if current_user.admin? %>
        <th>Edit</th>
        <th>Delete</th>
      <% end %>
    </tr>

    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.quantity %></td>
        <td><%= button_to "Add to cart" %></td>

        <% if current_user.admin? %>
          <td><%= button_to (image_tag ("edit.png"), height: 20), edit_item_path(item), method: :get %></td>
          <td><%= button_to (image_tag ("delete.png"), height: 20), item_path(item), method: :delete, data: {confirm: "Are you sure want delete this item?"} %></td>
        <% end %>

<!--         <td><input type="checkbox" name="buy" class="checkboxOne"></td>

        <td><input type="number" id="quantity" name="quantity" min="1" max= <%=item.quantity%>></td> -->
        
      </tr>
    <% end %>
  </table>
</div>
