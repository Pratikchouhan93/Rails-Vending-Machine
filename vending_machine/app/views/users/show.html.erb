<h1><%= @user.name unless @user.name.nil?  %></h1>
<p><%= @user.email %></p>

<ul>
  <li><%= link_to "Edit your Account", edit_user_path(@user) %></li><br>
  <li><%= button_to "Delete your account", user_path(@user), :method => :delete, data: {
                    turbo_confirm: "Are you sure?"
                  } %></li> 
</ul>
